developer=https://github.com/shaarli
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=0.9.6
pkgrel=1
pkgdesc="Personal, minimalist, super-fast, bookmarking service"
arch=('any')
license=("custom:${pkgname}")
source=("https://github.com/shaarli/Shaarli/releases/download/v${pkgver}/shaarli-v${pkgver}-full.tar.gz")
releasepage=('https://github.com/shaarli/Shaarli/releases')
options=('!strip')
sha512sums=('f3aa0e6206a16874c254d3ce279884295aafaf70513868bcc002e3b7641597bb43e1b3d77c8538edfafcbad98ed64e0f000d2949adf901ce92e45183320d122a')

package() {
# Manifest
    install -D -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# License
    install -D -m0644 ${startdir}/COPYING -t ${pkgdir}/ubos/share/licenses/${pkgname}/

# Icons
    install -D -m644 ${startdir}/appicons/{72x72,144x144}.png -t ${pkgdir}/ubos/http/_appicons/${pkgname}/

# Templates
    install -D -m644 ${startdir}/tmpl/deny-htaccess      -t ${pkgdir}/ubos/share/${pkgname}/tmpl/
    install -D -m644 ${startdir}/tmpl/datastore.php.tmpl -t ${pkgdir}/ubos/share/${pkgname}/tmpl/

# Code
    install -D -m755 ${startdir}/bin/*.pl ${pkgdir}/ubos/share/${pkgname}/bin/

    rsync --quiet --archive --exclude '.git*' ${startdir}/src/Shaarli/* ${pkgdir}/ubos/share/${pkgname}/web

# License
    install -D -m644 ${srcdir}/Shaarli/COPYING -t ${pkgdir}/usr/share/licenses/${pkgname}/
}
